<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ“Œ Fondo semitransparente que bloquea toques -->
    <View
        android:id="@+id/fondoTransparente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent_black"
        android:clickable="true"
        android:focusable="true"
        android:elevation="5dp"/>

    <!-- ðŸ“Œ RectÃ¡ngulo con texto en el centro -->
    <LinearLayout
        android:id="@+id/tutorialBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bocadillo_shape"
        android:padding="20dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:elevation="10dp"> <!-- ðŸ“Œ Asegura que el tutorial estÃ¡ por encima del fondo -->

        <TextView
            android:id="@+id/tutorialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tour_personaje"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

    <!-- ðŸ“Œ Botones debajo del texto -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tutorialBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="10dp">

        <Button
            android:id="@+id/btnSeguir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguir"
            android:visibility="gone"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- ðŸ“Œ La mano debe estar por ENCIMA de todo -->
    <ImageView
        android:id="@+id/handPointer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/hand_pointer"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:elevation="15dp"/>

</RelativeLayout>
