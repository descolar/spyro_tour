<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Círculo exterior -->
        <shape android:shape="oval">
            <solid android:color="#88000000"/> <!-- Color semitransparente -->
            <size android:width="250dp" android:height="250dp"/>
        </shape>
    </item>
    <item android:left="30dp" android:right="30dp" android:top="30dp" android:bottom="30dp">
        <!-- Círculo interior (transparente) -->
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <size android:width="190dp" android:height="190dp"/>
        </shape>
    </item>
</layer-list>
